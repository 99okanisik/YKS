<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iletisimActivity">


























    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#F5F5F5"
        tools:context=".MainActivity">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="135dp"

            android:layout_gravity="center_horizontal"

            >




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="26dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:background="@color/card_color_1">
                        <TextView
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Sorular"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="26dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/card_color_1">

                        <TextView

                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Sorular"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="26dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/card_color_1">

                        <TextView

                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Sorular"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="26dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/card_color_1">

                        <TextView

                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Sorular"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="26dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/card_color_1">

                        <TextView

                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Sorular"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>








            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">



            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewC"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="26dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/card_color_1">


                    <TextView
                        android:id="@+id/level3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:paddingRight="2dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Görseller"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewD"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="26dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/card_color_1">


                    <TextView
                        android:id="@+id/level4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="2dp"
                        android:paddingRight="2dp"
                        android:text="Hap bilgi"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>





        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">



            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewCC"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="26dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/card_color_1">



                    <TextView
                        android:id="@+id/level5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:paddingRight="2dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Odyoloji Nedir?"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewDD"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="26dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/card_color_1">


                    <TextView
                        android:id="@+id/level6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="2dp"
                        android:paddingRight="2dp"
                        android:text="İletişim"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>





        </LinearLayout>





    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>